# A xpybar configuration example testing the features of plugins.xkb

import time
import threading

from plugins.xkb import XKB
from plugins.clock import Clock


OUTPUT, HEIGHT, YPOS, TOP = 0, 12, 24, True


clock = Clock(sync_to = Clock.SECONDS / 4)

start_ = start
def start():
    start_()
    async(lambda : clock.continuous_sync(lambda : bar.invalidate()))


def redraw():
    xkb_ = XKB()
    
    text = 'Locks: %s (%i)'
    text %= ('+'.join(xkb_.get_locks_str()), xkb_.get_locks())
    
    bar.clear()
    bar.draw_coloured_text(0, 10, 0, 2, text)

